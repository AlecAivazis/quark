{
    "name": "quark",
    "author": "Alec Aivazis",
    "version": "0.1.0",
    "description": "a react component library",
    "scripts": {
        "__internal__lerna": "lerna",
        "bootstrap": "npm run __internal__lerna -- bootstrap",
        "build": "babel-node scripts/build",
        "version": "npm run __internal__lerna -- publish --skip-git --skip-npm",
        "publish": "npm run __internal__lerna -- exec -- \"cd build && npm publish\"",
        "release": "npm run version && npm run build && npm run publish",
        "__internal__prettier": "prettier 'packages/*/{,!(node_modules)/**/}*.js'",
        "format": "npm run __internal__prettier -- --write",
        "test": "NODE_ENV=test jest",
        "test:watch": "npm run test -- --watch",
        "test:coverage": "npm run test -- --coverage",
        "test:coverage:report":
            "npm run test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "flow": "flow",
        "flow:watch": "watchman-make -p 'packages/*/src/**/*.js' --make 'npm run' -t flow",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "printWidth": 100
    },
    "jest": {
        "testRegex": "test.js$",
        "setupFiles": ["<rootDir>/scripts/initEnzyme.js"],
        "snapshotSerializers": ["enzyme-to-json/serializer", "react-native-web/jest/serializer"],
        "modulePathIgnorePatterns": [
            "<rootDir>/packages/quark-core/build/",
            "<rootDir>/packages/quark-web/build/",
            "<rootDir>/packages/quark-native/build/"
        ],
        "moduleNameMapper": {
            "quark-core": "<rootDir>/packages/quark-core/src",
            "quark-web": "<rootDir>/packages/quark-web/src",
            "quark-native": "<rootDir>/packages/quark-native/src"
        },
        "collectCoverageFrom": ["packages/*/src/**/*.{js,jsx}"]
    },
    "devDependencies": {
        "@babel/core": "7.0.0-beta.34",
        "@babel/node": "7.0.0-beta.34",
        "@babel/polyfill": "7.0.0-beta.34",
        "@babel/preset-env": "7.0.0-beta.34",
        "@babel/preset-flow": "7.0.0-beta.34",
        "@babel/preset-react": "7.0.0-beta.34",
        "@babel/preset-stage-1": "7.0.0-beta.34",
        "@storybook/addon-actions": "^3.2.18",
        "@storybook/addon-links": "^3.2.18",
        "@storybook/react": "^3.2.18",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^21.2.0",
        "babel-plugin-flow-runtime": "^0.15.0",
        "babel-preset-react-native": "^4.0.0",
        "browser-env": "^3.2.3",
        "coveralls": "^3.0.0",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "enzyme-to-json": "^3.2.2",
        "flow-bin": "^0.59.0",
        "flow-runtime": "^0.16.0",
        "fs-extra": "^4.0.2",
        "jest": "^21.2.1",
        "lerna": "^2.0.0",
        "mkdirp": "^0.5.1",
        "prettier": "^1.7.4",
        "raf": "^3.4.0",
        "react": "^16.1.1",
        "react-dom": "^16.1.1",
        "react-native-web": "^0.3.0",
        "walk": "^2.3.9"
    },
    "dependencies": {
        "babel-plugin-react-native-web": "^0.3.0"
    }
}
