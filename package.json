{
    "name": "quark",
    "author": "Alec Aivazis",
    "version": "0.0.2",
    "description": "a react component library",
    "scripts": {
        "bootstrap": "lerna boostrap",
        "build": "lerna exec -- npm run build",
        "publish": "npm run build && lerna publish",
        "__internal__prettier":
            "prettier --tab-width 4 --no-semi --print-width 100 --single-quote --trailing-comma es5 packages/*/src/**/*.js",
        "format": "npm run __internal__prettier -- --write",
        "test": "lerna run test"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "license": "MIT",
    "devDependencies": {
        "lerna": "^2.0.0",
        "prettier": "^1.7.4"
    }
}
