{
    "name": "quark",
    "author": "Alec Aivazis",
    "version": "0.0.2",
    "description": "a react component library",
    "scripts": {
        "__internal__lerna": "lerna",
        "install": "npm run __internal__lerna -- exec -- npm install",
        "bootstrap": "npm run __internal__lerna -- boostrap",
        "build": "npm run __internal__lerna -- exec -- npm run build",
        "publish": "npm run build && lerna publish",
        "__internal__prettier": "prettier 'packages/*/{,!(node_modules)/**/}*.js'",
        "format": "npm run __internal__prettier -- --write",
        "test": "jest",
        "flow": "flow",
        "flow:watch": "watchman-make -p 'packages/*/src/**/*.js' --make 'npm run' -t flow"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "printWidth": 100
    },
    "jest": {
        "testRegex": "^/src/(test)\\.jsx?$",
        "setupTestFrameworkScriptFile": "<rootDir>/config/enzyme.js",
        "projects": ["<rootDir>/packages/*"],
        "modulePaths": ["<rootDir>/packages"]
    },
    "devDependencies": {
        "babel-jest": "^21.2.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-1": "^6.24.1",
        "browser-env": "^3.2.3",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "flow-bin": "^0.59.0",
        "jest": "^21.2.1",
        "lerna": "^2.0.0",
        "prettier": "^1.7.4",
        "raf": "^3.4.0",
        "react": "^16.1.1",
        "react-dom": "^16.1.1",
        "react-native-web": "^0.1.14"
    },
    "dependencies": {}
}
