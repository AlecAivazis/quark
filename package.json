{
    "name": "quark",
    "author": "Alec Aivazis",
    "version": "0.0.2",
    "description": "a react component library",
    "scripts": {
        "__internal__lerna": "lerna",
        "install": "npm run __internal__lerna -- exec -- npm install",
        "bootstrap": "npm run __internal__lerna -- bootstrap",
        "build": "babel-node scripts/build",
        "publish": "npm run build && lerna publish",
        "__internal__prettier": "prettier 'packages/*/{,!(node_modules)/**/}*.js'",
        "format": "npm run __internal__prettier -- --write",
        "test": "jest",
        "test:watch": "npm run test -- --watch",
        "flow": "flow",
        "flow:watch": "watchman-make -p 'packages/*/src/**/*.js' --make 'npm run' -t flow"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "printWidth": 100
    },
    "jest": {
        "testRegex": "test.js$",
        "setupFiles": ["<rootDir>/scripts/initEnzyme.js"],
        "snapshotSerializers": ["enzyme-to-json/serializer", "react-native-web/jest/serializer"],
        "modulePathIgnorePatterns": [
            "<rootDir>/packages/quark-core/build/",
            "<rootDir>/packages/quark-web/build/",
            "<rootDir>/packages/quark-native/build/"
        ],
        "moduleNameMapper": {
            "quark-core": "<rootDir>/packages/quark-core/src",
            "quark-core/styles": "<rootDir>/packages/quark-core/src/styles",
            "quark-web": "<rootDir>/packages/quark-web/src",
            "quark-web/styles": "<rootDir>/packages/quark-web/src/styles",
            "quark-native": "<rootDir>/packages/quark-native/src",
            "quark-native/styles": "<rootDir>/packages/quark-native/src/styles"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-beta.32",
        "@babel/node": "^7.0.0-beta.32",
        "@babel/preset-env": "^7.0.0-beta.32",
        "@babel/preset-flow": "^7.0.0-beta.32",
        "@babel/preset-react": "^7.0.0-beta.32",
        "@babel/preset-stage-1": "^7.0.0-beta.32",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^21.2.0",
        "babel-preset-react-native": "^4.0.0",
        "browser-env": "^3.2.3",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "enzyme-to-json": "^3.2.2",
        "flow-bin": "^0.59.0",
        "fs-extra": "^4.0.2",
        "jest": "^21.2.1",
        "lerna": "^2.0.0",
        "mkdirp": "^0.5.1",
        "prettier": "^1.7.4",
        "raf": "^3.4.0",
        "react": "^16.1.1",
        "react-dom": "^16.1.1",
        "react-native-web": "^0.1.14",
        "walk": "^2.3.9"
    }
}
